<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{DEFAULT} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="logFile" fileName="kafka-solr.log">
            <PatternLayout pattern="%d{DEFAULT} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="logFile"/>
        </Root>        
    </Loggers>
</Configuration>
